{
  "name": "@omni/db",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "setup": "supabase init",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push",
    "db:gen-types": "supabase gen types typescript --local > src/database.types.ts",
    "db:seed": "node -r esbuild-register supabase/seed.ts"
  },
  "dependencies": {
    "@omni/types": "workspace:*",
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild-register": "^3.5.0",
    "supabase": "^1.123.0",
    "typescript": "^5.3.3"
  }
}

